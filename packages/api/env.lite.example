# FindableX Lite Mode Configuration
# Copy this file to .env for local development without Docker/PostgreSQL/Redis
#
# Usage:
#   cp env.lite.example .env
#   pip install -r requirements.txt
#   python -m uvicorn app.main:app --reload

# Enable lite mode (SQLite + in-memory queue)
LITE_MODE=true

# Application
APP_NAME=FindableX
ENV=development
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# Database (SQLite for lite mode)
DATABASE_URL=sqlite+aiosqlite:///./data/findablex.db

# JWT
JWT_SECRET=jwt-dev-secret-change-in-production
JWT_ALGORITHM=HS256

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Storage (local directories)
UPLOAD_DIR=./data/uploads
DATA_DIR=./data

# Crawler settings
HEADLESS=true
SCREENSHOT_DIR=./data/screenshots

# CAPTCHA/Challenge handling settings
# Strategy options: manual, auto_wait, api, smart
# - manual: Pause and wait for user to solve manually in browser window
# - auto_wait: Wait for JS challenges to auto-resolve (Cloudflare JS)
# - api: Use 2Captcha API to solve CAPTCHAs
# - smart: Auto-select based on challenge type (recommended)
CAPTCHA_STRATEGY=smart
TWOCAPTCHA_API_KEY=
CAPTCHA_MANUAL_TIMEOUT=300
CAPTCHA_AUTO_WAIT_TIMEOUT=30

# Session persistence (for bypassing Cloudflare after manual solving)
SESSION_DIR=./data/sessions
SESSION_TTL_HOURS=24

# Browser profile settings
BROWSER_PROFILE_DIR=./data/browser_profiles
USE_PERSISTENT_CONTEXT=false

# Redis/Celery (not used in lite mode, but kept for reference)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
