# Development Caddyfile
{
    auto_https off
}

:80 {
    # API routes
    handle /api/* {
        reverse_proxy api:8000
    }
    
    # WebSocket for real-time updates
    handle /ws/* {
        reverse_proxy api:8000
    }
    
    # API docs
    handle /docs* {
        reverse_proxy api:8000
    }
    
    handle /redoc* {
        reverse_proxy api:8000
    }
    
    handle /openapi.json {
        reverse_proxy api:8000
    }
    
    # Health check
    handle /health {
        reverse_proxy api:8000
    }
    
    # Frontend
    handle {
        reverse_proxy web:3000
    }
}
